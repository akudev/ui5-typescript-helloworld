{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2020",
        "module": "es2020",
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "inlineSourceMap": true,
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "ui5/typescript/helloworld/*": [
                "./src/*"
            ],
            "unit/*": [
                "./src/test/unit/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "./custom.d.ts"
    ]
}
